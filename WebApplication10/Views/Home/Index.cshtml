<!-- SECTION -->
<div class="section">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">

			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h3 class="title">New Products</h3>
					<div class="section-nav">
						<ul class="section-tab-nav tab-nav">
							<li class="active"><a data-toggle="tab" href="#tab1">Laptops</a></li>
							<li><a data-toggle="tab" href="#tab1">Smartphones</a></li>
							<li><a data-toggle="tab" href="#tab1">Cameras</a></li>
							<li><a data-toggle="tab" href="#tab1">Accessories</a></li>
						</ul>
					</div>
				</div>
			</div>


			<!-- /section title -->
			<!-- Products tab & slick -->
			<div class="col-md-12">
				<div class="row">
					@foreach (var item in Model)
{
					<div class="col-md-4 col-lg-3">
						<!-- product -->
						<div class="product">
							<div class="product-img">
									<img src="@Url.Content(item.ImagePath )" alt="Course Image" />
								<div class="product-label">
	
									<span class="new">NEW</span>
								</div>
							</div>
							<div class="product-body">
			
									<h3 class="product-name">Title: @Html.DisplayFor(modelItem => item.Title)<a href="#">item</a></h3>
									<h4 class="product-price">Author: @Html.DisplayFor(modelItem => item.Author)</h4>
									<h4 class="product-price">Price: @Html.DisplayFor(modelItem => item.Price)</h4>
									
									
								<div class="product-rating">
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
								</div>
								
								<div class="product-btns">
									<button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
									<button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
									<button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
								</div>
							</div>
								<div class="see-detail">
									<a class="btn btn-danger btn-block " asp-action="Details" asp-route-id="@item.Id">See Detail</a> 
								</div>
						</div>
						<!-- /product -->
					</div>

}


				</div>

</div>
